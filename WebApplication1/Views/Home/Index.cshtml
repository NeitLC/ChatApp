@model WebApplication1.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex align-items-center">
        <div class="row">
          <div class="">
              <h4 class="display-2 text-black">@Model.FirstName</h4>
          </div>
        </div>
</div>
<form class="form-inline" asp-controller="Account" asp-action="Logout">
    <button type="submit" class="nav-link btn btn-primary text-white"><b>Logout</b></button>
</form>

<div class="text-center">
    <h1 class="display-4">To start click the button below</h1>
    <form class="form-inline" asp-controller="Home" asp-action="Messagebox">
        <div class="d-grid gap-2">
            <button class="btn btn-primary" type="submit"><b>Chat</b></button>
        </div>
    </form>
    <br/>
</div>